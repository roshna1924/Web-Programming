<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context="MainActivity">

    <Button
        android:id="@+id/btnDisplayLoc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:minWidth="80dip"
        android:onClick="getLocationDetails"
        android:text="Display Current Location"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnTakePhoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnDisplayLoc"
        android:layout_marginTop="31dp"
        android:onClick="takePhoto"
        android:text="Take Photo"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnStorage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnRecord"
        android:layout_marginTop="29dp"
        android:onClick="saveData"
        android:text="Save To Storage"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnRecord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnTakePhoto"
        android:layout_marginTop="30dp"
        android:onClick="recordVoice"
        android:text="Record"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>